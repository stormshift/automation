#
# DHCP Server Configuration file.
#   see /usr/share/doc/dhcp-server/dhcpd.conf.example
#   see dhcpd.conf(5) man page
#
option domain-name "{{layer3_ocp_name}}.{{ sysctx_dns_domain }}";
default-lease-time 86400;
authoritative;

# PXE Stuff from https://access.redhat.com/documentation/en-us/red_hat_enterprise_linux/7/html/installation_guide/chap-installation-server-setup
option space pxelinux;
option pxelinux.magic code 208 = string;
option pxelinux.configfile code 209 = text;
option pxelinux.pathprefix code 210 = text;
option pxelinux.reboottime code 211 = unsigned integer 32;
option architecture-type code 93 = unsigned integer 16;


subnet 172.16.10.0 netmask 255.255.255.0 {
  range 172.16.10.100 172.16.10.199;
  option domain-name-servers 172.16.10.5;
  option routers 172.16.10.1;
  option broadcast-address 172.16.10.255;
  max-lease-time 172800;
}

group {
  filename "pxelinux/fixMeControl.0";
  next-server 172.16.10.5;
  host bootstrap {hardware ethernet 42:42:42:42:42:06; fixed-address 172.16.10.6;}
  host control-0 {hardware ethernet 42:42:42:42:42:10; fixed-address 172.16.10.10;}
  host control-1 {hardware ethernet 42:42:42:42:42:11; fixed-address 172.16.10.11;}
  host control-2 {hardware ethernet 42:42:42:42:42:12; fixed-address 172.16.10.12;}
}

group {
  filename "pxelinux/fixMeCompute.0";
  next-server 172.16.10.5;
  host compute-0 {hardware ethernet 42:42:42:42:42:20; fixed-address 172.16.10.20;}
  host compute-1 {hardware ethernet 42:42:42:42:42:21; fixed-address 172.16.10.21;}
  host compute-2 {hardware ethernet 42:42:42:42:42:22; fixed-address 172.16.10.22;}
}
